<Window x:Class="ArtStart.Challenges"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtStart"
        Name="ChallengesWindow"
        mc:Ignorable="d"
        Title="Уровень 1" Height="600" Width="800">
    <DockPanel>
        <!-- Панель с результатом и кнопками -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
            
            <TextBlock x:Name="ResultTextBlock"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                <Button x:Name="NextLevelButton"
                        Content="Следующий уровень"
                        Click="NextLevelButton_Click"
                        Visibility="Collapsed"
                        Margin="5"
                        Padding="10,5"/>

                <Button x:Name="RetryButton"
                        Content="Пройти заново"
                        Click="RetryButton_Click"
                        Visibility="Collapsed"
                        Margin="5"
                        Padding="10,5"/>

                <Button x:Name="MainWindow"
                    Content="На главную"
                        Margin="5"
                        Padding="10,5"/>
            </StackPanel>
        </StackPanel>

        <!-- Список вопросов -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="QuestionsPanel" Margin="10"/>
        </ScrollViewer>
    </DockPanel>
</Window>
