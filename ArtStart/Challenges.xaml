<Window x:Class="ArtStart.Challenges"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtStart"
        mc:Ignorable="d"
        Title="Challenges" Height="450" Width="800">
    <DockPanel>
        <!-- Итоговый результат -->
        <TextBlock x:Name="ResultTextBlock" DockPanel.Dock="Bottom" FontSize="20" 
                   FontWeight="Bold" HorizontalAlignment="Center" Margin="10" />

        <!-- Список вопросов со скроллингом -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="QuestionsPanel" Margin="10"/>
        </ScrollViewer>
    </DockPanel>
</Window>
