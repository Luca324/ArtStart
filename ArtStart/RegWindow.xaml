<Window x:Class="ArtStart.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Name="RegWindowWindow"
        Title="Регистрация" Height="580" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#E6D5F1">

    <!-- Шаблон для овальных кнопок -->
    <Window.Resources>
        <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="20"
                    Padding="10,5">
                <ContentPresenter 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextElement.Foreground="{TemplateBinding Foreground}" />
            </Border>
        </ControlTemplate>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel Margin="0,10" HorizontalAlignment="Center">

            <!-- Заголовок -->
            <TextBlock Text="ArtStart"
           FontSize="40"
           FontWeight="Bold"
           FontStyle="Italic"
           FontFamily="Segoe Script"
           Foreground="#AD48B7"
           HorizontalAlignment="Center"
           Margin="0,0,0,0"/>

            <!-- Логин -->
          
            <TextBlock Text="Логин:" Foreground="#AD48B7" FontSize="16"/>
            <TextBox x:Name="LoginBox"
         Width="250"
         Margin="0,0,0,10"
         Height="30"
         Background="White"
         BorderBrush="#AD48B7"
         BorderThickness="1"
         Foreground="#3a183d"
         FontSize="16"/>

            <!-- Email -->
            <TextBlock Text="Email:" Foreground="#AD48B7" FontSize="16"/>
            <TextBox x:Name="EmailBox"
         Width="250"
         Margin="0,0,0,10"
         Height="30"
         Background="White"
         BorderBrush="#AD48B7"
         BorderThickness="1"
         Foreground="#3a183d"
         FontSize="16"/>

            <!-- Пароль -->
           
            <TextBlock Text="Пароль:" Foreground="#AD48B7" FontSize="16"/>
            <PasswordBox x:Name="PasswordBox"
             Width="250"
             Margin="0,0,0,10"
             Height="30"
             Background="White"
             BorderBrush="#AD48B7"
             BorderThickness="1"
             PasswordChar="•"
             Foreground="#3a183d"
             FontSize="20"/>

            <!-- Подтверждение пароля -->
            <TextBlock Text="Подтвердите пароль:" Foreground="#AD48B7" FontSize="16"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
             Width="250"
             Margin="0,0,0,10"
             Height="30"
             Background="White"
             BorderBrush="#AD48B7"
             BorderThickness="1"
             Foreground="#3a183d"
             
             PasswordChar="•"
             FontSize="20"/>

            <!-- Кнопка регистрации -->
            <Button Content="Зарегистрироваться"
                    Width="250"
                    Height="40"
                    Background="#AD48B7"
                    Foreground="White"
                    FontSize="16"
                    Click="Register_Click"
                    Template="{StaticResource RoundedButtonTemplate}"
                    Margin="0,0,0,10"/>

            <!-- Кнопка перехода к входу -->
            <Button Content="Уже есть аккаунт? Войти"
                    Width="250"
                    Height="40"
                    Background="Transparent"
                    BorderBrush="#AD48B7"
                    Foreground="#AD48B7"
                    FontSize="14"
                    Click="GoToLogin_Click"
                    Template="{StaticResource RoundedButtonTemplate}"
                    Margin="0,0,0,10"/>

            <!-- Сообщение об ошибках -->
            <TextBlock x:Name="ErrorText"
           Foreground="Red"
           TextWrapping="Wrap"
           HorizontalAlignment="Center"
           MaxWidth="250"
           Margin="0,0,0,10"
           FontSize="16"/>

            <!-- Кнопка выхода -->
            <Button Content="Выход"
                    Width="250"
                    Height="40"
                    Background="#E6D5F1"
                    BorderBrush="#AD48B7"
                    Foreground="#AD48B7"
                    FontSize="16"
                    Click="Exit_Click"
                    Template="{StaticResource RoundedButtonTemplate}"/>
        </StackPanel>
    </Grid>
</Window>