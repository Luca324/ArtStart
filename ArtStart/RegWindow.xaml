<Window x:Class="ArtStart.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#E6D5F1">
    <Grid Margin="20">
        <StackPanel Margin="0,10">
            <!-- Заголовок -->
            <TextBlock Text="Регистрация" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Логин -->
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="LoginBox" Margin="0,0,0,10"/>
            <!-- Email -->
            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailBox" Margin="0,0,0,10"/>


            <!-- Пароль -->
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" PasswordChar="*" Margin="0,0,0,10"/>

            <!-- Подтверждение пароля -->
            <TextBlock Text="Подтвердите пароль:"/>
            <PasswordBox x:Name="ConfirmPasswordBox" PasswordChar="*" Margin="0,0,0,10"/>

                   <!-- Кнопка регистрации -->
            <Button Content="Зарегистрироваться" Click="Register_Click" Background="#AD48B7" Foreground="White" Margin="0,0,0,10"/>

            <!-- Кнопка перехода к входу -->
            <Button Content="Уже есть аккаунт? Войти" Click="GoToLogin_Click" Background="Transparent" BorderBrush="Black" Margin="0,0,0,10"/>

            <!-- Сообщение об ошибках -->
            <TextBlock x:Name="ErrorText" Foreground="Red" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Кнопка выхода -->
            <Button Content="Выход" Click="Exit_Click" Background="LightGray"/>
        </StackPanel>
    </Grid>
</Window>