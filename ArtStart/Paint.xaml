<Window x:Class="ArtStart.Paint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ArtStart - Рисование" Height="800" Width="1200">
    <Grid>
        <!-- Верхнее меню -->
        <DockPanel Background="#E6D5F1" Height="40">
            <Button Content="ColorMix" Background="White" Foreground="Black" BorderBrush="Black" Margin="5,0"/>
            <Button Content="Challenges" Background="White" Foreground="Black" BorderBrush="Black" Margin="5,0"/>
        </DockPanel>

        <!-- Панель управления -->
        <StackPanel Orientation="Horizontal" Background="White" Height="120" VerticalAlignment="Top" Margin="0,40,0,0">
            <!-- File -->
            <StackPanel Margin="10,0">
                <Label Content="File" FontWeight="Bold"/>
                <Button Content="Open" Background="#AD48B7" Foreground="White" Click="OpenImage_Click" Margin="0,3"/>
                <Button Content="Save" Background="#AD48B7" Foreground="White" Click="SaveImage_Click" Margin="0,3"/>
            </StackPanel>

            <!-- Tools -->
            <StackPanel Margin="20,0">
                <Label Content="Tool" FontWeight="Bold"/>
                <ComboBox x:Name="toolComboBox" Background="#AD48B7" Foreground="White" SelectedIndex="0" Width="120">
                    <ComboBoxItem Content="Pen"/>
                    <ComboBoxItem Content="Line"/>
                    <ComboBoxItem Content="Rectangle"/>
                    <ComboBoxItem Content="Ellipse"/>
                    <ComboBoxItem Content="Eraser"/>
                    <ComboBoxItem Content="Spray"/>
                    <ComboBoxItem Content="Fill"/>
                    <ComboBoxItem Content="Star"/>
                </ComboBox>
            </StackPanel>

            <!-- Colors -->
            <StackPanel Margin="20,0">
                <Label Content="Colors" FontWeight="Bold"/>
                <Button x:Name="colorButton" Content="Выбрать цвет" Background="#AD48B7" Foreground="White" Click="ColorButton_Click" Width="120" />
            </StackPanel>

            <!-- MyColor (заглушка) -->
            <StackPanel Margin="20,0">
                <Label Content="MyColor" FontWeight="Bold"/>
                <Border Background="#FFDDAA" Width="120" Height="25"/>
            </StackPanel>

            <!-- Thickness -->
            <StackPanel Margin="20,0">
                <Label Content="Thickness" FontWeight="Bold"/>
                <Slider x:Name="thicknessSlider" Minimum="1" Maximum="50" Value="5" Width="120"/>
                <TextBlock Text="{Binding ElementName=thicknessSlider, Path=Value}" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Text -->
            <StackPanel Margin="20,0">
                <Label Content="Text" FontWeight="Bold"/>
                <ComboBox x:Name="fontComboBox" Background="#AD48B7" Foreground="White" Width="120">
                    <ComboBoxItem Content="Arial"/>
                    <ComboBoxItem Content="Times New Roman"/>
                    <ComboBoxItem Content="Courier New"/>
                    <ComboBoxItem Content="Verdana"/>
                    <ComboBoxItem Content="Georgia"/>
                </ComboBox>
                <Button Content="Add Text" Background="#AD48B7" Foreground="White" Click="AddText_Click" Margin="0,3"/>
            </StackPanel>

            <!-- Clear -->
            <Button Content="Clear" Background="#AD48B7" Foreground="White" Click="ClearCanvas_Click"
                    HorizontalAlignment="Right" Margin="20,30,10,0" Padding="10,5"/>
        </StackPanel>

        <!-- Холст -->
        <Border Background="#E6D5F1" Margin="0,160,0,0">
            <Canvas x:Name="drawingCanvas" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Width="1000" Height="600" MouseDown="Canvas_MouseDown" MouseMove="Canvas_MouseMove"
                    MouseUp="Canvas_MouseUp" KeyDown="Canvas_KeyDown" Focusable="True"/>
        </Border>
    </Grid>
</Window>