<Window x:Class="ArtStart.ColorMix"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtStart"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="ColorMix" Height="450" Width="800"
        Background="#E6D5F1">
    <Window.Resources>
        <Style x:Key="colorPicker">
            <Setter Property="Control.Width" Value="100" />
            <Setter Property="Control.Height" Value="100" />

        </Style>
        <Style x:Key="result">
            <Setter Property="Control.Width" Value="100" />
            <Setter Property="Control.Height" Value="100" />
            <Setter Property="TextBlock.TextAlignment" Value="Center" />
            <Setter Property="TextBlock.TextAlignment" Value="Center" />
            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
        </Style>
        
        <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}"
             BorderBrush="{TemplateBinding BorderBrush}"
             BorderThickness="{TemplateBinding BorderThickness}"
             Padding="{TemplateBinding Padding}"
             CornerRadius="10">
                <ContentPresenter 
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             TextElement.Foreground="{TemplateBinding Foreground}" />
            </Border>
        </ControlTemplate>
        <Style x:Key="violetBtn" TargetType="Button" BasedOn="{StaticResource roundedBtn}">
            <Setter Property="Background" Value="#AD48B7" />
            <Setter Property="Foreground" Value="White" />


            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#AD48B7" />
                    <Setter Property="Background" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="roundedBtn" TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Background" Value="#AD48B7" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="3" />
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="Padding" Value="2" />
            <Setter Property="Template" Value="{StaticResource RoundedButtonTemplate}"></Setter>

            
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"  MinWidth="100px"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*"  MinWidth="200px"/>
        </Grid.ColumnDefinitions>

        <StackPanel Name="NavBar" Grid.Row="0"  Grid.ColumnSpan="3" Orientation="Horizontal" Background="#AD48B7">
            <Button  Content="Challenges" Name="Challenges" Style="{StaticResource violetBtn}"/>
            <Button  Content="Paint" Name="Paint"  Style="{StaticResource violetBtn}"/>
            <Button Content="Log out"  Name="LogOut" Style="{StaticResource violetBtn}"/>
            <Button  Content="На главную" Name="MainWindow"   Style="{StaticResource violetBtn}"/>
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="0">
            <WrapPanel HorizontalAlignment="Center" >
                <xctk:ColorPicker x:Name="ColorPicker1" Style="{StaticResource colorPicker}"/>
                <xctk:ColorPicker x:Name="ColorPicker2" Style="{StaticResource colorPicker}"/>
            </WrapPanel>
            <Button Name="MixBtn"  Content="Получить результат" Click="MixBtn_Click" />
            <TextBlock Name="result"  Style="{StaticResource result}">Результат</TextBlock>
        </StackPanel>

        <GridSplitter  Grid.Row="1" Grid.Column="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Center" VerticalAlignment="Stretch" />


        <DockPanel Grid.Row="1" Grid.Column="2" LastChildFill="True">
            <TextBlock DockPanel.Dock="Top">Палитры</TextBlock>

            <StackPanel DockPanel.Dock="Bottom" Margin="0,10,0,0">
                <TextBox Name="NewPaletteName" MaxLength="40" Margin="0,0,0,5"/>
                <Button Name="CreateNewPalette" 
                        Click="CreateNewPalette_Click"
                         Style="{StaticResource violetBtn}"
                        >Создать палитру</Button>
            </StackPanel>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Name="Palettes">
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
