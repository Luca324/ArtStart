<Window x:Class="ArtStart.ColorMix"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtStart"
        mc:Ignorable="d"
        Title="ColorMix" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ToolBar Grid.Row="0">
            <!-- File Operations -->
            <Button  Content="Challenges" Name="Challenges" Width="100"/>
            <Button  Content="Paint" Name="Paint"  Width="100"/>

        </ToolBar>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Button Name="button1"  Content="Левая кнопка" Click="button1_Click" />
            <TextBlock Name="text1">Текст1</TextBlock>
            <TextBlock Name="text2">Текст2</TextBlock>
            <TextBlock Name="text3">Текст2</TextBlock>
            <TextBlock Name="text4">Текст2</TextBlock>
        </StackPanel>

        <GridSplitter  Grid.Row="1" Grid.Column="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Center" VerticalAlignment="Stretch" />
        <Button  Grid.Row="1" Grid.Column="2" Content="Правая кнопка" />
    </Grid>
</Window>
